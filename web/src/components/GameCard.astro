---
import "../model";
import { getGameAdminUrl } from "../services";

type Props = { game: Game };

const { game } = Astro.props;
---

<div class="card w-96 bg-base-100 shadow-xl">
  <div class="card-body">
    <h2 class="card-title">{game.name} <span class="badge badge-neutral">pending</span></h2>
    <p>If a dog chews shoes whose shoes does he choose?</p>
    <div class="card-actions justify-end">
      <a href={getGameAdminUrl(game)} class="btn btn-primary">See the game</a>
    </div>
  </div>
</div>
