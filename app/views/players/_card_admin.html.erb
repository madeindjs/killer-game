<div class="player-card-admin">
  <div class="player-card-admin__header">
    <div class="player-card-admin__header__photo"></div>
    <p class="player-card-admin__header__name">
      <strong><%= player.name %></strong>
      <% if player.description %>
        <small><%= player.description %></small>
      <% end %>
    </p>
    <p class="player-card-admin__header__status">
      <%= player.dead? ? t(:dead) : t(:alive) %>
    </p>
  </div>
  <div class="player-card-admin__cards">
    <p>⚔️ Need to kill <strong><%= player.mission_card.target.name %></strong></p>
    <p>👺 Killed by <%= player.victim_card.player.name %></p>
    <p><%= link_to t(:see), player_path(player), role: 'button' %></p>
  </div>
</div>
