<nav class="breadcrumb">
  <ul>
    <li><%= games_link %></li>
    <li><%= game_link @player.game %></li>
    <li><%= players_link @player.game %></li>
    <li><%= @player.name %></li>
  </ul>
</nav>
<h1><%= @player.name %></h1>
<%= render @player %>
<h2>TODO</h2>
<dl>
  <dt>sa mission</dt>
  <dd>
    <p><%= t('card_print.need_to_make', target: @player.mission_card.target.pretty ).html_safe %><br/>
      <strong><%= @player.mission_card.action %></strong>
    </p>
  </dd>
  <% if @player.victim_card %>
    <dt>son percecuteur</dt>
    <dd>
      <p><%= t('card_print.need_to_make', target: @player.victim_card.target.pretty ).html_safe %><br/>
        <strong><%= @player.victim_card.action %></strong>
      </p>
    </dd>
  <% end %>
</dl>
<ul class="list-inline">
  <li><%= link_to t('players.edit.title'), edit_game_player_path(game_id: @player.game_id, id: @player.id) %></li>
  <li><%= button_to t('players.destroy.title'), game_player_path(game_id: @player.game_id, id: @player.id), method: :delete %></li>
</ul>
