<div class="grid">
  <h1><%= Game.model_name.human %>: <%= @game.name %></h1>
  <nav>
    <ul style="flex-grow: 1; justify-content: flex: end;">
      <li><%= link_to 'üÉè G√©n√©rer les cartes', game_cards_path(@game.id) %></li>
      <li><%= link_to "üìä Dashboard", game_dashboard_path(@game.token) if @game.token %></li>
      <% unless @game.started? %>
        <li><%= link_to "‚úè Edit this game", edit_game_path(@game), class: "secondary"  %></li>
      <% end %>
    </ul>
  </nav>
</div>
<details open>
  <summary><%= Card.model_name.human(count: @cards_in_table) %></summary>
  <%= render 'cards/table', cards: @cards_in_table, players_list: @game.players_list.sort, actions_list: @game.actions_list.sort %>
</details>
<details>
  <summary><%= Game.human_attribute_name("players") %></summary>
  <div class="grid">
    <div>
      <p>Joueurs encore en vie</p>
      <ul>
        <% @game.alive_players_list.each do |player| %>
          <li><%= player %></li>
        <% end %>
      </ul>
    </div>
    <div>
      <p>Joueurs d√©c√©d√©s</p>
      <ul>
        <% @game.dead_players_list.each do |player| %>
          <li><del><%= player %></del></li>
        <% end %>
      </ul>
    </div>
  </div>
</details>
<details>
  <summary><%= Game.human_attribute_name("actions") %></summary>
  <ul>
    <% @actions.each do |action| %>
      <li><%= action %></li>
    <% end %>
  </ul>
</details>
<% if @game.started? %>
  <details open>
    <summary>Evenements</summary>
    <%= render "cards/events", cards: @cards_done %>
  </details>
<% end %>
<details>
  <summary>Actions</summary>
  <div class="buttons">
    <%= link_to 'üÉè G√©n√©rer les cartes', game_cards_path(@game.id), role: :button %>
    <%= link_to "üìä Dashboard", game_dashboard_path(@game.token), role: :button if @game.token %>
    <%= link_to "‚úè Edit this game", edit_game_path(@game), role: :button, class: "secondary" unless @game.started? %>
  </div>
</details>
<details>
  <summary>‚ö† Actions dangeureuses</summary>
  <div class="buttons">
    <%= link_to "‚úè Edit this game", edit_game_path(@game), role: :button, class: "secondary" if @game.started? %>
    <%= button_to "üóë Supprimer l'√©venement", @game, method: :delete, role: :button, class: "secondary outline" %>
  </div>
</details>
