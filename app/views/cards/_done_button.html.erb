<%= form_with(model: card, url: game_card_path(game_id: card.game.id, id: card.token), remote: true, class: "card-form") do |form| %>
  <%= form.hidden_field :done_at, value: card.done? ? "0" : "1" %>
  <%= form.submit (card.done? ? t('card_view.mark_as_todo') : t('card_view.mark_as_done')),
    class: (card.done? ? 'secondary outline' : '') %>
<% end %>
